<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="vertical|horizontal" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/background_scanqractivity_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/text_authorizeFragment_userKey"
                style="@android:style/TextAppearance.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:layout_marginLeft="@dimen/textView_TransferAmountActivity_yourId_left_margin"
                android:layout_marginStart="@dimen/textView_TransferAmountActivity_yourId_left_margin"
                android:layout_toRightOf="@+id/text_enterAmountFragment_dollarRate"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:singleLine="true"
                android:text="Your ID asdfasfasdflaksjdflkajsklfjaskljflkasjflkasjfkljaslkfjaskljflkasjflkasjfklasjklfjaslkfjaslkdflkasdfjasdfasdf "
                android:textColor="@color/your_id_color"
                android:textStyle="italic" />

            <me.grantland.widget.AutofitTextView
                android:id="@+id/text_authorizeFragment_dollarRate"
                style="@android:style/TextAppearance.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/textView_TransferAmountActivity_title_right_margin"
                android:layout_marginRight="@dimen/textView_TransferAmountActivity_title_right_margin"
                android:layout_weight="1"
                android:minWidth="300dp"
                android:gravity="center_vertical|end"
                android:singleLine="true"
                android:text="1BTC = 2202 USD"
                android:textColor="@color/text_hint_color" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/linearLayout_authorizeActivity_profile_container_margin_top"
        android:background="@drawable/background_athorize_profile_container"
        android:elevation="15dp"
        android:minHeight="290dp"
        android:orientation="horizontal"
        android:paddingLeft="42dp"
        android:paddingRight="70dp"
        android:paddingTop="24dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_authorizeFragment_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/linearLayout_authorizeActivity_profile_details_left_margin"
            android:layout_marginStart="@dimen/linearLayout_authorizeActivity_profile_details_left_margin"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <me.grantland.widget.AutofitTextView
                android:id="@+id/text_authorizeFragment_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aron Foster"
                android:textColor="@color/text_hint_color"
                android:textSize="26sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/text_authorizeFragment_emailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textAllCaps="false"
                        android:textColor="@color/text_hint_color"
                        android:textSize="20sp" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/text_authorizeFragment_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="abc@ggmail.com"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/linearLayout"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical">

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/text_authorizeFragment_mobileNumberTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number"
                        android:maxLines="1"
                        android:textAllCaps="false"
                        android:textColor="@color/text_hint_color"
                        android:textSize="20sp" />

                    <me.grantland.widget.AutofitTextView
                        android:id="@+id/text_authorizeFragment_mobileNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:text="0000-0000000"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="26dp"
                android:orientation="vertical">

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/text_authorizeFragment_addressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textAllCaps="false"
                    android:textColor="@color/text_hint_color"
                    android:textSize="20sp" />

                <me.grantland.widget.AutofitTextView
                    android:id="@+id/text_authorizeFragment_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="This is your address"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:orientation="horizontal">

        <me.grantland.widget.AutofitTextView
            android:id="@+id/text_authorizeFragment_bitcoinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.2"
            android:textColor="@color/colorAccent"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/text_authorizeFragment_BTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" BTC"
            android:textColor="@color/colorAccent"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/text_authorizeFragment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" will be transferred from your wallet"
            android:textColor="@color/text_color"
            android:textSize="26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/button_authorizeFragment_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:background="@drawable/background_cancel_button_all_rounded"
            android:minHeight="70dp"
            android:minWidth="220dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_authorizeFragment_authorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:minHeight="70dp"
            android:minWidth="220dp"
            android:text="Authorize"
            android:textAllCaps="false"
            android:textColor="@color/button_text_color"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout></ScrollView>