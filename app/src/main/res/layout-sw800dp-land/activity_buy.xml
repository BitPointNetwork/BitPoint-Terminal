<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:scrollbars="vertical|horizontal" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageView_buy_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_setting"
            android:layout_gravity="end"
            android:layout_margin="16dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/imageView_buyActivity_margin_top_bottom"
            android:layout_marginTop="@dimen/imageView_buyActivity_margin_top_bottom"
            android:src="@drawable/img_logo" />


        <Button
            android:id="@+id/button_buyActivity_sellBitcoins"
            android:layout_width="422dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="143dp"
            android:background="@drawable/button_background"
            android:minHeight="80dp"
            android:text="Buy Bitcoins"
            android:textAllCaps="false"
            android:textSize="26sp" />
    </LinearLayout>

</ScrollView>
