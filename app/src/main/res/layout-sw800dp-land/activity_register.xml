<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical|horizontal">

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/registerActivity_side_margins"
        android:layout_marginLeft="@dimen/registerActivity_side_margins"
        android:layout_marginRight="@dimen/registerActivity_side_margins"
        android:layout_marginStart="@dimen/registerActivity_side_margins"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/img_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/editText_registerActivity_marginTop"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_registerActivity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/editText_bottomMargin"
                android:layout_marginTop="@dimen/editText_topMargin"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:inputType="textPersonName"
                android:background="@drawable/background_transparent"
                android:drawableLeft="@drawable/img_name"
                android:drawablePadding="10dp"
                android:gravity="bottom"
                android:hint="Name"
                android:singleLine="true"
                android:textColor="@color/text_hint_color"
                android:textColorHint="@color/text_hint_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0"
                android:background="@color/text_hint_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/editText_registerActivity_marginTop"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_registerActivity_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/editText_bottomMargin"
                android:layout_marginTop="@dimen/editText_topMargin"
                android:layout_weight="1"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:inputType="textEmailAddress"
                android:background="@drawable/background_transparent"
                android:drawableLeft="@drawable/img_email"
                android:drawablePadding="10dp"
                android:gravity="bottom"
                android:hint="Email"
                android:textColor="@color/text_hint_color"
                android:textColorHint="@color/text_hint_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0"
                android:background="@color/text_hint_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/editText_registerActivity_marginTop"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edit_registerActivity_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/editText_bottomMargin"
                android:layout_marginTop="@dimen/editText_topMargin"
                android:layout_weight="1"
                android:inputType="number"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:background="@drawable/background_transparent"
                android:drawableLeft="@drawable/img_number"
                android:drawablePadding="10dp"
                android:gravity="bottom"
                android:hint="Phone Number"
                android:textColor="@color/text_hint_color"
                android:textColorHint="@color/text_hint_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0"
                android:background="@color/text_hint_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="@dimen/editText_registerActivity_marginTop"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/editText_registerActivity_marginBetween"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_registerActivity_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/editText_bottomMargin"
                    android:layout_marginTop="@dimen/editText_topMargin"
                    android:layout_weight="1"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:inputType="textPassword"
                    android:background="@drawable/background_transparent"
                    android:drawableLeft="@drawable/img_password"
                    android:drawablePadding="10dp"
                    android:gravity="bottom"
                    android:hint="Password"
                    android:textColor="@color/text_hint_color"
                    android:textColorHint="@color/text_hint_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="@color/text_hint_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/editText_registerActivity_marginBetween"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_registerActivity_confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/editText_bottomMargin"
                    android:layout_marginTop="@dimen/editText_topMargin"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:background="@drawable/background_transparent"
                    android:drawableLeft="@drawable/img_confirm_password"
                    android:drawablePadding="10dp"
                    android:gravity="bottom"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:hint="Confirm Password"
                    android:textColor="@color/text_hint_color"
                    android:textColorHint="@color/text_hint_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="@color/text_hint_color" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_registerActivity_register"
            android:layout_width="422dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/button_background"
            android:minHeight="80dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/text_registerActivity_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_hint_color" />
    </LinearLayout>

</ScrollView>
