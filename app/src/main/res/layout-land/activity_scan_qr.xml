<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:scrollbars="vertical|horizontal">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/background_scanqractivity_title"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_scanQRFragment_dollarRate"
                    style="@android:style/TextAppearance.Large"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/textView_scanQRActivity_title_right_margin"
                    android:layout_marginRight="@dimen/textView_scanQRActivity_title_right_margin"
                    android:gravity="center_vertical"
                    android:text="1BTC = 2202 USD"
                    android:textColor="@color/text_hint_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="@dimen/linearLayout_scanQRActivity_description_margin_top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_scanQRFragment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/img_scan_qr"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Scan QR Code"
                        android:textColor="@color/text_color"
                        android:textSize="32sp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:id="@+id/text_scanQRFragment_description"
                        style="@android:style/TextAppearance.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Open bitpoint app on your mobile and place your QR code in front of camera."
                        android:textColor="@color/text_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout_scanQRFragment_scannerContainer"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:orientation="vertical"></LinearLayout>

                    <TextView
                        android:id="@+id/text_scanQRFragment_scanning"
                        style="@android:style/TextAppearance.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Scanning..."
                        android:textColor="@color/qractivity_title_stroke_color"
                        android:textStyle="italic" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/button_scanQRFragment_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_cancel_button_rihgt_side_rounded_only"
                android:minHeight="50dp"
                android:minWidth="180dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="26sp" />
        </LinearLayout>
    </HorizontalScrollView>
</ScrollView>